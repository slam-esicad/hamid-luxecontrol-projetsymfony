{% extends 'Sidebar.base.html.twig' %}

{% block title %}Dashboard{% endblock %}


{% block body %}

    <div class="ui container">
        <h1 color="red" class="header inika">Tableau de bord</h1>

        <div class="ui three column grid">
            <div class="column">
                <div class="ui fluid cart">
                    <div class="ui one statistics content">
                        <div class="statistic">
                            <div class="value">
                                <i class="blue car icon"></i> {{ nb_cars }}
                            </div>
                            <div class="label">
                                Voitures
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui fluid cart">
                    <div class="ui one statistics content">
                        <div class="statistic">
                            <div class="value">
                                <i class="green users icon"></i> {{ nb_customers }}
                            </div>
                            <div class="label">
                                Clients
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui fluid cart">
                    <div class="ui one statistics content">
                        <div class="statistic">
                            <div class="value">
                                <i class="red folder icon"></i> {{ nb_contracts }}
                            </div>
                            <div class="label">
                                Contrats en cours
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui fluid cart">
                    <div class="ui one statistics content">
                        <div class="statistic">
                            <div class="value">
                                <i class="yellow money icon"></i> {{ ca|format_currency('EUR') }}
                            </div>
                            <div class="label">
                                C.A cette ann√©e
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="ui two column grid">
            <div class="column">
                <div class="ui fluid cart">
                    <div class="content">
                        <h2 class="header">Notes</h2>
                        <form method="POST">
                            <textarea style="width: 100%; height: 200px; padding: 5px; border: 1px solid lightgray; outline: none;" name="notes" id="notes"></textarea>
                            <input name="sub_edit_notes" style="margin-top: 20px; padding: 10px;" class="ui yellow button" value="Enregistrer" type="submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
